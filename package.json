{
  "name": "vscode-essentials",
  "version": "1.0.0",
  "description": "VS Code Essentials eBook",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "honkit serve",
    "build": "npm run build:website -s && npm run build:book -s",
    "build:website": "honkit build",
    "build:book": "mkdir -p dist && honkit pdf ./ ./dist/vs-code-essentials.pdf && honkit epub ./ ./dist/vs-code-essentials.epub && honkit mobi ./ ./dist/vs-code-essentials.mobi",
    "build:clean": "rm -rf _book dist",
    "build:word": "pandoc --reference-doc ./vs-code-essentials_template.docx -s ./dist/vs-code-essentials_en.epub -o dist/vs-code-essentials_en.docx",
    "format": "prettier --write '(src|scripts)/**/*.{ts,json,scss}'",
    "prepare": "simple-git-hooks || echo 'simple-git-hooks install skipped'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/vscode-essentials.git"
  },
  "homepage": "https://github.com/sinedied/vscode-essentials",
  "bugs": {
    "url": "https://github.com/sinedied/vscode-essentials/issues"
  },
  "keywords": [],
  "license": "CC BY-SA 4.0",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "devDependencies": {
    "honkit": "^5.1.1",
    "prettier": "^3.1.1",
    "pretty-quick": "^4.0.0",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx pretty-quick --staged"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true
  }
}
